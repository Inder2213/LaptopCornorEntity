@page
@model LaptopCornor.Pages.Clients.IndexModel

@{
    ViewData["Title"] = "Index";
}






<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="btn btn-warning"><a asp-page="Create">Add New Product </a></h1>

        </div>
        @foreach (var item in Model.Customer)
        {
            <div class="col-md-4">
                <div class="card" style="width:400px">
                    <img class="card-img-top" src="https://www.agilitypr.com/wp-content/uploads/2020/08/client-1.jpg" alt="Card image" style="width:100%">
                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h4>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.dTime)</p>
                        <a asp-page="/Clients/Create" class="btn btn-primary">Buy Now</a>
                        <a asp-page="./Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" class="btn btn-danger" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" class="btn btn-success" asp-route-id="@item.Id">Delete</a>

                    </div>
                </div>

            </div>

        }
    </div>

</div>



